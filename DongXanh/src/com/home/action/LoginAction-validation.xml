<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
  <field name="userName">
      <field-validator type="requiredstring">
          <message>Username can't empty!</message>
      </field-validator>
  </field>
  <field name="password">
      <field-validator type="requiredstring">
          <message>Password can't empty!</message>
      </field-validator>
  </field>
</validators>