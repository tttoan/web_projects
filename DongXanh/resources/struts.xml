<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="false"></constant>
	<constant name="struts.convention.result.path" value="/"></constant>
	<constant name="struts.custom.i18n.resources" value="struts"></constant>

	<package name="default1" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor class="com.home.action.LoginInterceptor"
				name="loginInterceptor">
			</interceptor>
			<interceptor-stack name="loginStack">
				<interceptor-ref name="loginInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

		<!-- home link action -->
		<action name="homeAction" class="com.home.action.LoginAction"
			method="execute">
			<interceptor-ref name="loginStack" />
			<result name="login">login.jsp</result>
			<result name="success">index.jsp</result>
		</action>

		<action name="login" method="getListCustomerByBirthday" class="com.home.action.LoginAction">
			<result name="success">/index.jsp</result>
			<result name="input" type="redirect">/login.jsp</result>
		</action>
		<action name="add_employee" method="addEmployee" class="com.home.action.UserAction">
			<result name="success" type="redirectAction">list_employee</result>
			<result name="input">/new_employee.jsp</result>
		</action>
		<action name="list_employee" method="listEmployee"
			class="com.home.action.UserAction">
			<result name="success">/employees.jsp</result>
			<result name="input">/employees.jsp</result>
		</action>
		<action name="delete_employee" method="deleteEmployeeById"
			class="com.home.action.UserAction">
			<result name="success" type="redirectAction">list_employee</result>
		</action>
		<action name="move_to_add_employee" class="com.home.action.UserAction">
			<result name="success">/new_employee.jsp</result>
			<result name="error">/employees.jsp</result>
		</action>
		<action name="move_to_add_customer" class="com.home.action.CustomerAction">
			<result name="success">/new_customer.jsp</result>
			<result name="error">/customers.jsp</result>
		</action>
		<action name="notify_list_customer" method="notifyListCutomer"
			class="com.home.action.CustomerAction">
			<result name="success">/index.jsp</result>
			<result name="error">/login.jsp</result>
		</action>
		<action name="add_customer" method="addCustomer"
			class="com.home.action.CustomerAction">
			<result name="success" type="redirectAction">list_customer</result>
			<result name="input">/new_customer.jsp</result>
		</action>
		<action name="find_customer" method="findCustomer"
			class="com.home.action.CustomerAction">
			<result name="success">/new_customer.jsp</result>
		</action>
		<action name="list_customer" class="com.home.action.CustomerAction">
			<result name="success">/customers.jsp</result>
			<result name="error">/index.jsp</result>
		</action>
		<action name="delete_customer" method="deleteCustomerById"
			class="com.home.action.CustomerAction">
			<result name="success" type="redirectAction">list_customer</result>
			<result name="error">/error.jsp</result>
		</action>

		<action name="list_statistic" method="listStatistic"
			class="com.home.action.StatisticAction">
			<result name="success">/statistics.jsp</result>
			<result name="error" type="redirectAction">move_to_add_statistic</result>
		</action>

		<action name="move_to_add_statistic" class="com.home.action.StatisticAction">
			<result name="success">/new_statistic.jsp</result>
			<result name="error">/new_statistic.jsp</result>
		</action>

		<action name="add_statistic" method="addStatistic"
			class="com.home.action.StatisticAction">
			<result name="success" type="redirectAction">list_statistic</result>
			<result name="error" type="redirectAction">move_to_add_statistic</result>
		</action>
		<action name="delete_statistic" method="deleteStatistic"
			class="com.home.action.StatisticAction">
			<result name="success" type="redirectAction">list_statistic</result>
		</action>

		<action name="import_statistic_level_one" method="importStatisticLevelOne"
			class="com.home.action.StatisticAction">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">application/ms-excel,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</param>
				<param name="maximumSize">10240</param>
			</interceptor-ref>
			<interceptor-ref name="execAndWait">
				<!-- override delay and delaySleepInterval parameters of execAndWait 
					to 500ms -->
				<param name="delay">3000</param>
				<param name="delaySleepInterval">3000</param>
			</interceptor-ref>
			<result name="wait">/waiting.jsp</result>
			<result name="success">/import_statistic.jsp</result>
		</action>
		<action name="move_to_accept_statistic" class="com.home.action.StatisticAction">
			<result name="success">/import_statistic.jsp</result>
			<result name="error">/index.jsp</result>
		</action>
		<action name="export_statistic" method="exportStatistic"
			class="com.home.action.StatisticAction">
			<result name="success" type="stream">
				<param name="contentType">application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</param>
				<param name="inputName">fileInputStream</param>
				<param name="contentDisposition">attachment;filename="export.xlsx"</param>
			</result>
		</action>

		<action name="import_statistic_level_two" method="importStatisticLevelTwo"
			class="com.home.action.StatisticAction">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">application/ms-excel,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</param>
			</interceptor-ref>
			<interceptor-ref name="execAndWait">
				<param name="delay">3000</param>
				<param name="delaySleepInterval">3000</param>
			</interceptor-ref>
			<result name="wait">/waiting.jsp</result>
			<result name="success">/import_statistic.jsp</result>
		</action>

		<action name="import_customer" method="importCustomer"
			class="com.home.action.CustomerAction">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">application/ms-excel,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</param>
			</interceptor-ref>
			<result name="input">/index.jsp</result>
			<result name="success">/customers.jsp</result>
		</action>
	</package>
	<package name="default2" namespace="/" extends="json-default">
		<interceptors>
			<interceptor-stack name="defaultStack">
				<interceptor-ref name="json">
					<param name="enableSMD">true</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="defaultStack" />

		<action name="readDistricts" class="com.home.action.ProductAction"
			method="retrieveUnitPriceById">
			<result type="json">
				<param name="root">unitPrice</param>
			</result>
		</action>
		<action name="readInfoCustomer" class="com.home.action.CustomerAction"
			method="retrievePhoneById">
			<result type="json">
				<param name="root">commonCusPhone</param>
			</result>
		</action>
	</package>
	<include file="promotion.xml"></include>
	<include file="userplan.xml"></include>
</struts>