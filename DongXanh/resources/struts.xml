<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.convention.result.path" value="/"></constant>
	<constant name="struts.custom.i18n.resources" value="struts"></constant>
	<package name="default" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor name="authentication"
				class="com.home.listener.AuthenticationInterceptor"></interceptor>
			<interceptor-stack name="authStack">
				<interceptor-ref name="authentication"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="authStack"></default-interceptor-ref>
		<global-results>
			<result name="login" type="redirect">/dongxanh.action</result>
		</global-results>
		<action name="dongxanh">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result>/login.jsp</result>
		</action>

		<action name="login" class="com.home.action.LoginAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="success">/index.jsp</result>
			<result name="input">/login.jsp</result>
		</action>

		<action name="testing_user" method="testUser" class="com.home.action.UserAction">
			<result name="success">/test.jsp</result>
		</action>

		<action name="logout_wanted" method="logOutWanted"
			class="com.home.action.LoginAction">
			<result name="success">/login.jsp</result>
			<result name="input">/login.jsp</result>
		</action>

		

		

		<action name="import_customer" method="importCustomer"
			class="com.home.action.CustomerAction">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">application/ms-excel,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</param>
			</interceptor-ref>
			<result name="input">/index.jsp</result>
			<result name="success">/customers.jsp</result>
		</action>
	</package>
	
	<include file="promotion.xml"></include>
	<include file="userplan.xml"></include>
	<include file="employee_struts.xml"></include>
	<include file="customer_struts.xml"></include>
	<include file="statistic_struts.xml"></include>
</struts>